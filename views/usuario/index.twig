{% extends "layout.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}

{% endblock %}
{% block content %}


    <h1> Usuarios</h1>
    <p >
        <div class="container">
            <h3><a href="/usuarios/create">Crear Usuario</a></h3>
            <h1>Lista de Usuarios</h1>
            {% if usuarios is not empty %}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for usuario in usuarios %}
                        <tr>
                            <td><a href="/usuarios/show/{{ usuario._id }}">{{ usuario.nombre }}</a></td>
                            <td>{{ usuario.apellido }}</td>
                            <td>{{ usuario.email }}</td>
                            <td>{{ usuario.estado }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div>Usuarios no encontrados.</div>
            {% endif %}
        </div>
    </p>
{% endblock %}